#!/bin/sh

DMENU="${POWER_PROMPT_DMENU:-'rofi -dmenu'}"
POWER_PROMPT="${POWER_MENU_POWER_PROMPT:-''}"
I3_PROMPT="${POWER_MENU_I3_PROMPT:-''}"

prompt() {
    printf '%s\n' "$@" | $DMENU -p "$1 "
}

case "$(prompt "$POWER_PROMPT" i3 lock suspend reboot poweroff)" in
    i3) case "$(prompt "$I3_PROMPT" reload restart exit)" in
        reload)     j4-make-config && i3-msg reload     ;;
        restart)    j4-make-config && i3-msg restart    ;;
        exit)       j4-make-config && i3-msg exit       ;;
    esac ;;
    lock)           xscreensaver-command -lock          ;;
    sleep)          systemctl suspend                   ;;
    reboot)         systemctl reboot                    ;;
    shutdown)       systemctl poweroff                  ;;
esac

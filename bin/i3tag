#!/usr/bin/env bash

DMENU="${I3TAG_DMENU:-"rofi -dmenu"}"

get_workspaces() {
    i3-msg -t get_workspaces | jq -r '.[].name'
}

find_workspace_by_number() {
    while IFS= read -r ws; do
        if [[ "$ws" == ${1}:* ]]; then
            printf "%s" "$ws"
            return 0
        fi
    done < <(get_workspaces)
    printf "%s" "$1"
}

prompt_for_workspace() {
    printf '%s' "$(get_workspaces)" | $DMENU -p 'ï€‰ '
}

case "$1" in
    move)
        cmd='move container to workspace'
        ;;
    switch|*)
        cmd='workspace'
        ;;
esac

if [[ -n "$2" ]]; then
    i3-msg "${cmd} $(find_workspace_by_number "$2")"
else
    i3-msg "${cmd} $(prompt_for_workspace)"
fi
